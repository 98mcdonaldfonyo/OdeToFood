@page
@model ListModel
@{

}

<h1>Resturants</h1>

<form method="get">

    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="Search" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-primary">
                    <i class="glyphicon glyphicon-search"></i>              
                </button>
            </span>
        </div>
    </div>

</form>

<body>
    <table class="table">
        @foreach (var r in Model.Resturants)
        { 
        <tr>
            <td>@r.NBame</td>
            <td>@r.Location</td>
            <td>@r.cuisine</td>    
            <td>
                <a class="btn btn-primary" asp-page="./Detail" asp-route-ResturantId=@r.Id>
                    <i class=" glyphicon glyphicon-zoom-in"></i>
                </a>



                <a class="btn btn-primary" asp-page="./Edit" asp-route-ResturantId=@r.Id>
                    <i class=" carousel-control-edit-icon"></i>
                </a>
            </td>
        </tr>
        }

    </table>
    <a asp-page="./Edit"class="btn btn-primary">New Resturant</a>
    <div>@Model.Message </div>
</body>