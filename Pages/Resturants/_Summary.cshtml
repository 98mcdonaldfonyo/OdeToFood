@using OdeToFood.Core

@model Resturant  

<div class="panel panel-default">

    <div class=" panel-heading ">

        <h3>@Model.NBame</h3>
    </div>

    <div class=" panel-body">

        <span>Location :@Model.Location</span>
        <span>Cusine : @Model.cuisine</span>
    </div>
    <div class=" panel-footer">
        <a class="btn btn-primary" asp-page="./Detail" asp-route-ResturantId=@Model.Id>
            <i class=" glyphicon glyphicon-zoom-in"></i>
        </a>



        <a class="btn btn-primary" asp-page="./Edit" asp-route-ResturantId=@Model.Id>
            <i class=" carousel-control-edit-icon"></i>
        </a>

        <a class="btn btn-primary" asp-page="./Delete" asp-route-ResturantId=@Model.Id>
            <i class=" carousel-control-edit-icon"></i>
        </a>
    </div>
</div>